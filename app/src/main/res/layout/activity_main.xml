<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/draw_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="Schedule"
                    android:textColor="#000"
                    android:layout_centerInParent="true"/>

                <Button
                    android:id="@+id/open_drawer"
                    android:layout_width="38sp"
                    android:layout_height="38sp"
                    android:layout_marginLeft="19sp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/menu"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/img"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/backblank">

                    <Button
                        android:id="@+id/select_today"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/today"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:layout_marginLeft="60sp"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:text="今天"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/backblank">

                    <Button
                        android:id="@+id/select_plan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/date"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:layout_marginLeft="60sp"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:text="计划"/>
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/backblank">

                    <Button
                        android:id="@+id/select_log"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/log"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:layout_marginLeft="60sp"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:text="便签"/>
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/backblank">

                    <Button
                        android:id="@+id/select_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/history"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:layout_marginLeft="60sp"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:text="历史"/>
                </FrameLayout>
            </LinearLayout>






           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="?attr/selectableItemBackground">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="165dp">

                   <ImageView
                       android:layout_width="15dp"
                       android:layout_height="15dp"
                       android:background="@drawable/setting"
                       android:layout_marginTop="10dp" />

                   <Button
                       android:id="@+id/setting"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:textColor="#bfbfbf"
                       android:textSize="14sp"
                       android:background="#00000000"
                       android:text="设置"/>
               </LinearLayout>
           </RelativeLayout>

        </LinearLayout>





       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="#000"
           android:layout_gravity="start">

           <ImageView
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_centerInParent="true"
               android:src="@mipmap/rpz" />
       </RelativeLayout>

    </android.support.v4.widget.DrawerLayout>



</LinearLayout>
